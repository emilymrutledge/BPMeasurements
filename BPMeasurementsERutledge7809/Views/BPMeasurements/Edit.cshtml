@model BPMeasurementsERutledge7809.Models.BPMeasurement

@{
    ViewData["Title"] = "Edit Measurement";
}

<h2>Edit Blood Pressure Measurement</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="ID" />

    <div class="form-group">
        <label asp-for="Systolic" class="control-label"></label>
        <input asp-for="Systolic" class="form-control" />
        <span asp-validation-for="Systolic" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Diastolic" class="control-label"></label>
        <input asp-for="Diastolic" class="form-control" />
        <span asp-validation-for="Diastolic" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="MeasurementDate" class="control-label"></label>
        <input asp-for="MeasurementDate" class="form-control" type="date" />
        <span asp-validation-for="MeasurementDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PositionID" class="control-label"></label>
        <select asp-for="PositionID" class="form-control" asp-items="ViewBag.PositionID"></select>
        <span asp-validation-for="PositionID" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
