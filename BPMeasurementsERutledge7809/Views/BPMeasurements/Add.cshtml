@model BPMeasurementsERutledge7809.Models.BPMeasurement

@{
    ViewData["Title"] = "Add New Measurement";
}

<h2>Add New Blood Pressure Measurement</h2>

<form asp-action="Add" method="post">
    <div class="form-group">
        <label asp-for="Systolic" class="control-label">Systolic (mm Hg)</label>
        <input asp-for="Systolic" class="form-control" id="Systolic" name="Systolic" />
        <span asp-validation-for="Systolic" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Diastolic" class="control-label">Diastolic (mm Hg)</label>
        <input asp-for="Diastolic" class="form-control" id="Diastolic" name="Diastolic" />
        <span asp-validation-for="Diastolic" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="MeasurementDate" class="control-label">Measurement Date</label>
        <input asp-for="MeasurementDate" class="form-control" type="date" />
        <span asp-validation-for="MeasurementDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PositionID" class="control-label">Position</label>
        <select asp-for="PositionID" class="form-control" asp-items="ViewBag.PositionID"></select>
        <span asp-validation-for="PositionID" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Add</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
